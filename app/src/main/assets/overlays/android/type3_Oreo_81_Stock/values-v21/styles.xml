<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.DeviceDefault.Resolver" parent="@*android:style/Theme.Material">
        <item name="*android:windowBackground">@*android:color/transparent</item>
        <item name="*android:backgroundTint">@*android:color/background_floating_material_dark</item>
        <item name="*android:windowNoTitle">true</item>
        <item name="*android:windowIsTranslucent">true</item>
        <item name="*android:windowContentOverlay">@null</item>
        <item name="*android:backgroundDimEnabled">true</item>
        <item name="*android:listPreferredItemPaddingStart">?*android:dialogPreferredPadding</item>
        <item name="*android:listPreferredItemPaddingEnd">?*android:dialogPreferredPadding</item>
        <item name="*android:colorControlActivated">@*android:color/accent_material_dark</item>
        <item name="*android:colorPrimary">@*android:color/background_floating_material_dark</item>
        <item name="*android:colorPrimaryDark">@*android:color/background_floating_material_dark</item>
        <item name="*android:colorAccent">@*android:color/accent_material_dark</item>
        <item name="*android:windowEnterTransition">@empty</item>
        <item name="*android:windowExitTransition">@empty</item>
        <item name="*android:statusBarColor">@*android:color/transparent</item>
        <item name="*android:textColorPrimary">#ffffffff</item>
        <item name="*android:textColorSecondary">@*android:color/secondary_text_default_material_dark</item>
        <item name="*android:textColor">#ffffffff</item>
    </style>
    <style name="Widget.DeviceDefault.Light.PopupWindow" parent="@*android:style/Widget.Material.PopupWindow">
        <item name="*android:colorBackground">@*android:color/background_floating_material_dark</item>
        <item name="*android:textColorPrimary">#ffffffff</item>
        <item name="*android:textColorSecondary">#ffdddddd</item>
        <item name="*android:textColor">#ffffffff</item>
    </style>
</resources>
