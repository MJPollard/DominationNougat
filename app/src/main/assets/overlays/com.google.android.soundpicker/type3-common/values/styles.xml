<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Platform.AppCompat.Light" parent="@*android:style/Theme.DeviceDefault.Light" />
    <style name="Theme.Base" parent="@*com.google.android.soundpicker:style/Theme.AppCompat.Light">
        <item name="android:actionBarTheme">@*com.google.android.soundpicker:style/Theme.ActionBar</item>
        <item name="android:statusBarColor">@*android:color/primary_dark_material_dark</item>
        <item name="android:navigationBarColor">@*android:color/primary_dark_material_dark</item>
        <item name="android:colorEdgeEffect">@*android:color/secondary_text_default_material_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="*com.google.android.soundpicker:actionBarTheme">@*com.google.android.soundpicker:style/Theme.ActionBar</item>
        <item name="*com.google.android.soundpicker:colorPrimaryDark">@*android:color/primary_dark_material_dark</item>
        <item name="*com.google.android.soundpicker:colorAccent">@*com.google.android.soundpicker:color/google_blue600</item>
        <item name="*com.google.android.soundpicker:colorControlNormal">@*android:color/secondary_text_default_material_dark</item>
    </style>
    <style name="Widget.Design.BottomSheet.Modal" parent="@*android:style/Widget">
        <item name="android:background">@*android:color/background_floating_material_dark</item>
        <item name="android:elevation">@*com.google.android.soundpicker:dimen/design_bottom_sheet_modal_elevation</item>
        <item name="*com.google.android.soundpicker:behavior_peekHeight">auto</item>
        <item name="*com.google.android.soundpicker:behavior_hideable">true</item>
        <item name="*com.google.android.soundpicker:behavior_skipCollapsed">false</item>
        <item name="*com.google.android.soundpicker:shapeAppearance">@null</item>
        <item name="*com.google.android.soundpicker:shapeAppearanceOverlay">@null</item>
        <item name="*com.google.android.soundpicker:enforceMaterialTheme">false</item>
        <item name="*com.google.android.soundpicker:backgroundTint">@*android:color/background_floating_material_dark</item>
    </style>
    <style name="Widget.GoogleMaterial.FloatingActionButton" parent="@*com.google.android.soundpicker:style/Widget.MaterialComponents.FloatingActionButton">
        <item name="*com.google.android.soundpicker:rippleColor">@*com.google.android.soundpicker:color/google_fab_ripple_color</item>
        <item name="*com.google.android.soundpicker:elevation">@*com.google.android.soundpicker:dimen/google_fab_elevation</item>
        <item name="*com.google.android.soundpicker:tint">@*com.google.android.soundpicker:color/google_blue600</item>
        <item name="*com.google.android.soundpicker:hoveredFocusedTranslationZ">@*com.google.android.soundpicker:dimen/google_fab_translation_z_hovered_focused</item>
        <item name="*com.google.android.soundpicker:pressedTranslationZ">@*com.google.android.soundpicker:dimen/google_fab_translation_z_pressed</item>
        <item name="*com.google.android.soundpicker:shapeAppearance">@null</item>
        <item name="*com.google.android.soundpicker:shapeAppearanceOverlay">@*com.google.android.soundpicker:style/ShapeAppearanceOverlay.GoogleMaterial.FloatingActionButton</item>
        <item name="*com.google.android.soundpicker:enforceMaterialTheme">true</item>
        <item name="*com.google.android.soundpicker:backgroundTint">@*android:color/button_material_dark</item>
    </style>
    <style name="Widget.GoogleMaterial.TabLayout" parent="@*com.google.android.soundpicker:style/Widget.MaterialComponents.TabLayout">
        <item name="android:background">@*android:color/primary_material_dark</item>
        <item name="*com.google.android.soundpicker:tabIndicatorColor">@*com.google.android.soundpicker:color/google_blue600</item>
        <item name="*com.google.android.soundpicker:tabIndicator">@*com.google.android.soundpicker:drawable/google_tabs_rounded_line_indicator</item>
        <item name="*com.google.android.soundpicker:tabIndicatorFullWidth">false</item>
        <item name="*com.google.android.soundpicker:tabTextAppearance">@*com.google.android.soundpicker:style/TextAppearance.GoogleMaterial.Tab</item>
        <item name="*com.google.android.soundpicker:tabTextColor">@*com.google.android.soundpicker:color/google_tabs_icon_color_selector</item>
        <item name="*com.google.android.soundpicker:tabIconTint">@*com.google.android.soundpicker:color/google_tabs_icon_color_selector</item>
        <item name="*com.google.android.soundpicker:tabRippleColor">@*com.google.android.soundpicker:color/google_tabs_ripple_color_selector</item>
        <item name="*com.google.android.soundpicker:enforceMaterialTheme">true</item>
        <item name="*com.google.android.soundpicker:enforceTextAppearance">false</item>
    </style>
</resources>
