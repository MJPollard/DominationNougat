<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.SplashScreenTheme" parent="@*projekt.substratum.lite:style/AppTheme">
        <item name="android:windowBackground">@*projekt.substratum.lite:drawable/splash_screen</item>
        <item name="android:statusBarColor">@*android:color/primary_text_leanback_light</item>
        <item name="android:navigationBarColor">@*android:color/primary_text_leanback_light</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowShowWallpaper">false</item>
    </style>
    <style name="Base.TextAppearance.AppCompat.Inverse" parent="@*android:style/TextAppearance.Material" />
    <style name="Base.TextAppearance.AppCompat.Large.Inverse" parent="@*android:style/TextAppearance.Material.Large" />
    <style name="Base.TextAppearance.AppCompat.Medium.Inverse" parent="@*android:style/TextAppearance.Material.Medium" />
    <style name="Base.TextAppearance.AppCompat.Small.Inverse" parent="@*android:style/TextAppearance.Material.Small" />
    <style name="Base.TextAppearance.AppCompat.Widget.ActionBar.Subtitle.Inverse" parent="@*android:style/TextAppearance.Material.Widget.ActionBar.Subtitle" />
    <style name="Base.TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse" parent="@*android:style/TextAppearance.Material.Widget.ActionBar.Title" />
    <style name="Base.TextAppearance.AppCompat.Widget.Button.Inverse" parent="@*android:style/TextAppearance.Material.Widget.Button" />
    <style name="Base.Widget.AppCompat.Light.ActionBar.TabText" parent="@*android:style/Widget.Material.ActionBar.TabText" />
    <style name="Base.Widget.AppCompat.Light.ActionBar.TabText.Inverse" parent="@*android:style/Widget.Material.ActionBar.TabText" />
    <style name="Base.Widget.AppCompat.Light.ActionBar.TabView" parent="@*android:style/Widget.Material.ActionBar.TabView" />
    <style name="Base.Widget.AppCompat.Light.PopupMenu" parent="@*android:style/Widget.Material.PopupMenu" />
    <style name="CardView" parent="@*projekt.substratum.lite:style/Base.CardView">
        <item name="*projekt.substratum.lite:cardBackgroundColor">@*android:color/background_floating_material_dark</item>
    </style>
    <style name="Platform.V21.AppCompat.Light" parent="@*android:style/Theme.Material.NoActionBar">
        <item name="android:textColorHintInverse">#ffbbbbbb</item>
        <item name="android:textColorHint">#ffbbbbbb</item>
        <item name="android:textColorLink">@*android:color/accent_material_dark</item>
        <item name="android:textColorLinkInverse">@*android:color/accent_material_dark</item>
    </style>
    <style name="Platform.V25.AppCompat.Light" parent="@*android:style/Theme.Material.NoActionBar" />
    <style name="Widget.Design.FloatingActionButton" parent="@*android:style/Widget">
        <item name="android:background">@*projekt.substratum.lite:drawable/design_fab_background</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="*projekt.substratum.lite:backgroundTint">@*android:color/button_material_dark</item>
        <item name="*projekt.substratum.lite:borderWidth">@*projekt.substratum.lite:dimen/design_fab_border_width</item>
        <item name="*projekt.substratum.lite:elevation">@*projekt.substratum.lite:dimen/design_fab_elevation</item>
        <item name="*projekt.substratum.lite:fabSize">auto</item>
        <item name="*projekt.substratum.lite:hideMotionSpec">@*projekt.substratum.lite:animator/design_fab_hide_motion_spec</item>
        <item name="*projekt.substratum.lite:hoveredFocusedTranslationZ">@*projekt.substratum.lite:dimen/design_fab_translation_z_hovered_focused</item>
        <item name="*projekt.substratum.lite:maxImageSize">@*projekt.substratum.lite:dimen/design_fab_image_size</item>
        <item name="*projekt.substratum.lite:pressedTranslationZ">@*projekt.substratum.lite:dimen/design_fab_translation_z_pressed</item>
        <item name="*projekt.substratum.lite:rippleColor">@*android:color/ripple_material_dark</item>
        <item name="*projekt.substratum.lite:showMotionSpec">@*projekt.substratum.lite:animator/design_fab_show_motion_spec</item>
    </style>
</resources>
