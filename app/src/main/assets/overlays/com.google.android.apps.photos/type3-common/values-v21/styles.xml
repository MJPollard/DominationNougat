<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AssistantCardIcon">
        <item name="android:paddingLeft">16.0dip</item>
        <item name="android:paddingRight">16.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_weight">0.0</item>
        <item name="android:backgroundTint">@*android:color/button_material_dark</item>
    </style>
    <style name="Base.TextAppearance.AppCompat.Inverse" parent="@*android:style/TextAppearance.Material" />
    <style name="Base.TextAppearance.AppCompat.Large.Inverse" parent="@*android:style/TextAppearance.Material.Large" />
    <style name="Base.TextAppearance.AppCompat.Medium.Inverse" parent="@*android:style/TextAppearance.Material.Medium" />
    <style name="Base.TextAppearance.AppCompat.Small.Inverse" parent="@*android:style/TextAppearance.Material.Small" />
    <style name="Base.Widget.AppCompat.Light.ActionBar.TabText" parent="@*android:style/Widget.Material.ActionBar.TabText" />
    <style name="Base.Widget.AppCompat.Light.ActionBar.TabView" parent="@*android:style/Widget.Material.ActionBar.TabView" />
    <style name="Base.Widget.AppCompat.Light.PopupMenu" parent="@*android:style/Widget.Material.PopupMenu" />
    <style name="GvrDialogTheme" parent="@*android:style/Theme.Material.Dialog" />
    <style name="Platform.V21.AppCompat" parent="@*android:style/Theme.Material.NoActionBar">
        <item name="android:windowBackground">@*android:color/background_dark</item>
        <item name="android:textColorHintInverse">#ffbbbbbb</item>
        <item name="android:textColorHint">#ffbbbbbb</item>
        <item name="android:textColorLink">@*android:color/accent_material_dark</item>
        <item name="android:textColorLinkInverse">@*android:color/accent_material_dark</item>
        <item name="android:navigationBarColor">@*android:color/primary_dark_material_dark</item>
    </style>
    <style name="Platform.V21.AppCompat.Light" parent="@*android:style/Theme.Material.NoActionBar">
        <item name="android:windowBackground">@*android:color/background_dark</item>
        <item name="android:textColorHintInverse">#ffbbbbbb</item>
        <item name="android:textColorHint">#ffbbbbbb</item>
        <item name="android:textColorLink">@*android:color/accent_material_dark</item>
        <item name="android:textColorLinkInverse">@*android:color/accent_material_dark</item>
        <item name="android:navigationBarColor">@*android:color/primary_dark_material_dark</item>
    </style>
    <style name="Theme.Photos.PhotoEditor.Dialog" parent="@*android:style/Theme.Material.Dialog.Alert">
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:colorPrimary">#ff1976d2</item>
        <item name="android:colorPrimaryDark">#ff0d47a1</item>
        <item name="android:colorAccent">#ff1976d2</item>
    </style>
    <style name="Widget.Design.BottomSheet.Modal" parent="@*android:style/Widget">
        <item name="android:background">@*android:color/background_floating_material_dark</item>
        <item name="android:elevation">@*com.google.android.apps.photos:dimen/design_bottom_sheet_modal_elevation</item>
        <item name="*com.google.android.apps.photos:behavior_peekHeight">auto</item>
        <item name="*com.google.android.apps.photos:behavior_hideable">true</item>
        <item name="*com.google.android.apps.photos:behavior_skipCollapsed">false</item>
        <item name="*com.google.android.apps.photos:shapeAppearance">@null</item>
        <item name="*com.google.android.apps.photos:shapeAppearanceOverlay">@null</item>
        <item name="*com.google.android.apps.photos:enforceMaterialTheme">false</item>
        <item name="*com.google.android.apps.photos:backgroundTint">@*android:color/background_floating_material_dark</item>
    </style>
</resources>
